{% extends "::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('FarmaciaBundle:Builder:farmaciaMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Listado de Imv_Pyp{% endblock %}

{% block msg %}
	{% if app.session.hasFlash('ok') %}
	    <div class="alert alert-success">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.hasFlash('info') %}
		<div class="alert alert-info">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.hasFlash('error') %}
		<div class="alert alert-error">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}

{% block cuerpo %}

<form name="consultaImv" id="consultaImv" class="form-horizontal" method="post" action="{{ path('imvpyp_list') }}" {{ form_enctype(form) }}>
		    <fieldset>
		    	<legend>Busqueda</legend>
					{{ form_widget(form) }}
		    </fieldset>

		   <div class="form-actions">
				<input class="btn btn-primary" name="Buscar"  type="submit" value="Buscar" />
				<a href="{{ path('imvpyp_new') }}" class="btn btn-primary">Nueva Imv_Pyp</a>				
			    <a href="{{ path('imvpyp_search') }}" class="btn">Volver</a>
				
			</div>

		</form>

	{% if imvpyp %}
	    <table class="table">
	        <thead>
	            <tr>
	                <th>No.</th>	                
	                <th>Imv_pyp</th>
	                <th>Categoria</th>
	                <th>Edad_Inicial</th>
	                <th>Edad_Final</th>
	                <th>Sexo</th>
	            </tr>
	        </thead>
	        <tbody>
	        {% for imvpyp in imvpyp %}
	            <tr>
	                <td>{{ loop.index }}</td>
	                <td><a href="{{ path('imvpyp_show', {'imvpyp':imvpyp.id}) }}">{{ imvpyp.imv }}</a></td>
	             	 <td>{{ imvpyp.pyp }}</td>
	             	 <td>{{ imvpyp.edadini }}</td>
	             	 <td>{{ imvpyp.edadfin}}</td>
	             	 <td>{{ imvpyp.sexo}}</td>
	            </tr>
	        {% endfor %}
	        </tbody>
	    </table>
	{% else %}
		<div class="alert alert-success">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>No existen ImvPyp creadas</span>
	    </div>
	{% endif %}
		
    
{% endblock %}
