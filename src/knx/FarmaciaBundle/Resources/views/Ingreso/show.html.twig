{% extends "::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('FarmaciaBundle:Builder:farmaciaMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Información del ingreso {% endblock %}

{% block msg %}
	{% if app.session.hasFlash('ok') %}
	    <div class="alert alert-success">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.hasFlash('info') %}
		<div class="alert alert-info">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.hasFlash('error') %}
		<div class="alert alert-error">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}

{% block cuerpo %}	    

	<table class="table">
        <thead>
	        <tr>
                <th>No.</th>
                <th>Almacen</th>
                <th>Factura</th>
                <td>Fecha</th>
                <th>Valor Total</th>
                <th>Valor Neto</th>
                <th>Valor Iva</th>                
            </tr>
        </thead>    
            
        <tbody>
            <tr>
            	<td>{{ ingreso.id }}</td>
            	<td>{{ ingreso.almacen }}</td>
            	<td>{{ ingreso.numFact }}</td>
            	<td>{{ ingreso.fecha | date('d-m-Y')}}</td>
            	<td>{{ ingreso.valorT}}</td>
            	<td>{{ ingreso.valorN}}</td>
            	<td>{{ ingreso.valorIva}} %</td>         	
        	</tr>
        </tbody>    
    </table>

	<div class="btn-group">
	    <a href="{{ path('ingreso_edit', {'ingreso':ingreso.id}) }}" class="btn btn-primary">Modificar</a>
	    <a href="{{ path('ingreso_list') }}" class="btn">Volver</a>
    </div>
    
    
    <hr>
    <h3>Cargos IMV</h3>
    
    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Imv</th>
                <th>Proveedor</th>                
                <th>Cantidad</th>
                <th>Precio Compra</th>
                <th>Precio de Venta</th>
                <th>Precio Total</th>
                
                
               
            </tr>
        </thead>
        <tbody>
        {% for inventario in inventarios %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('inventario_edit', { 'inventario': inventario.id }) }}">{{ inventario.imv}}</a></td>
                <td>{{ inventario.proveedor }} </td>
                <td>{{ inventario.cant }} </td>
                <td>{{ inventario.precioCompra }} </td> 
                <td>{{ inventario.precioVenta }} </td>
                <td>{{ inventario.precioTotal }} </td>     
                
            </tr>
         {% else %}
         	<tr>
         		<td colspan="5">No tenemos imv definidos.</td>
         	</tr>
        {% endfor %}
        </tbody>
    </table>
    
    <div class="btn-group">
	    <a href="{{ path('inventario_new', {'ingreso':ingreso.id}) }}" class="btn btn-primary">Nuev IMV</a>
	  

{% endblock %}
   


    
    

