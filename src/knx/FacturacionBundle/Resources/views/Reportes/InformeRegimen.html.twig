{% extends "::simple.html.twig" %}

{% block head %}
{% endblock %}

{% block body %}

{% set regimen = {'1': 'Contributivo', '2': 'Subsidiado', '3': 'Vinculado', '4': 'Otro'} %}
	<div>
		<table>
			<thead>
				<tr>
					<th>Regimen</th>		
					<th>Codigo Cargo</th>
					<th>Nombre Cargo</th>
					<th>Cantidad</th>
					<th>Valor Unitario</th>
					<th>Costo Total</th>							
				</tr>
			</thead>
			<tbody>
				{% for entity in facturaCargo %}
					<tr>
						<td>{{ regimen[entity.regimen] }}</td>
						<td>{{ entity.soat}}</td>
						<td>{{ entity.cargo}}</td>
						<td>{{ entity.cantidad }}</td>
						<td>{{ entity.vrUnitario}}</td>
						<td>{{ entity.total }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}